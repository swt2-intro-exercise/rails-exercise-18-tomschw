<h1>Authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th>Details</th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= link_to author.homepage, author.homepage %></td>
      <td><%= link_to "details", author_path(author) %></td>
    </tr>
<% end %>
</table>
<%= link_to "New", new_author_path %>